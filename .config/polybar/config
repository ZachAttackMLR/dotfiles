; Side Bar 0 {{{

[bar/side0]
monitor = eDP-1
width = 100%
height = 27
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
border-size = 0
border-color = #00000000
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 2

; Due to different monitor sizes and different resolutions, these fonts are
; smaller on this monitor cuz they look better like this
font-0 = "Hack Nerd Font Mono:pixelsize=12;3"
font-1 = fixed:pixelsize=12;1
font-2 = unifont:fontformat=truetype:size=12:antialias=true;0
font-3 = siji:pixelsize=12;1
modules-left = bspwm xwindow
modules-right = pulseaudio wlan eth date
tray-position = right
tray-padding = 0
wm-restack = bspwm
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
cursor-click = pointer
cursor-scroll = ns-resize

; END Side Bar }}}

; Side Bar 1 {{{

[bar/side1]
monitor = DP-3
width = 100%
